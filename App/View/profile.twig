{% extends "./Layout/base.twig" %}

{% block title %}
	<title>Profile</title>
{% endblock %}
{% block styles %}<link href="public\css\profile\profile.css" rel="stylesheet"/>
{% endblock %}
{% block header %}
	<header class="masthead" style="background-image: url('https://th.bing.com/th/id/OIG.nBd3A_5EY.2sn9QloX5s?pid=ImgGn')">
		<div class="container position-relative px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 align-content-center justify-content-center pt-5">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="page-heading">
						<h1>Profil</h1>
						<span class="subheading">Les secrets du héros de cette pages
						</span>
					</div>
				</div>
			</div>
		</div>
	</header>
{% endblock %}
