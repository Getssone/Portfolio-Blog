{% extends './Layout/base.twig' %}
{% block title %}

	<title>
		Erreur 404
	</title>
{% endblock %}
{% block styles %}
	<link rel="stylesheet" href="public\css\404/404.css">
{% endblock %}
{% block header %}
	<header class="masthead" style="background-image: url('https://image.lexica.art/full_jpg/1b618fb8-61b9-41d3-9d64-a0f9b3879997'); background-repeat: no-repeat; background-position-y: -15rem;">
		<div class="container position-relative px-4 px-lg-5">
			<div class="row gx-4 gx-lg-5 align-content-center justify-content-center pt-5">
				<div class="col-md-10 col-lg-8 col-xl-7">
					<div class="post-heading">
						<h1 class="display-2">Erreur 404</h1>
						<span class="meta">
							<span class="meta">
								Page non trouvée</span>
						</span>

						<q class="subheading">
							Je part de ce pas à la conquette de cette histoire
						</q>
					</div>
				</div>
			</div>
		</div>
	</header>
{% endblock %}
{% block content %}

	{% if message is defined and message is not empty %}
		<p class="text-light bg-warning d-flex justify-content-center py-3">{{ message|raw }}
		</p>
	{% endif %}
	<div id="content" class="container-fluid">
		<main class="p-5">
			<img src="https://image.lexica.art/full_jpg/d231f1a8-6709-443a-b68c-dbf4e3dbbb74" alt="">
		</main>
	</div>
{% endblock %}
